# Staging Environment Configuration

NODE_ENV=staging

# API Configuration
PORT=5000
API_URL=https://staging-api.techverse.com
CLIENT_URL=https://staging.techverse.com

# Database (Use GitHub Secrets)
MONGODB_URI=${STAGING_MONGODB_URI}

# Redis
REDIS_URL=${STAGING_REDIS_URL}

# JWT Configuration (Use GitHub Secrets)
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=${STAGING_JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRE=30d
JWT_ISSUER=techverse-api
JWT_AUDIENCE=techverse-client

# Stripe (Use GitHub Secrets)
STRIPE_SECRET_KEY=${STAGING_STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STAGING_STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STAGING_STRIPE_WEBHOOK_SECRET}

# Email
EMAIL_HOST=${STAGING_EMAIL_HOST}
EMAIL_PORT=587
EMAIL_USER=${STAGING_EMAIL_USER}
EMAIL_PASS=${STAGING_EMAIL_PASS}
EMAIL_FROM=noreply@staging.techverse.com

# Cloudinary
CLOUDINARY_CLOUD_NAME=${STAGING_CLOUDINARY_CLOUD_NAME}
CLOUDINARY_API_KEY=${STAGING_CLOUDINARY_API_KEY}
CLOUDINARY_API_SECRET=${STAGING_CLOUDINARY_API_SECRET}

# Logging
LOG_LEVEL=info

# Security
ENABLE_RATE_LIMITING=true
ENABLE_CSRF=true

# Sentry (Optional)
SENTRY_DSN=${STAGING_SENTRY_DSN}
