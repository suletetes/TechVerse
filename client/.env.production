# Production Environment Configuration
# This file contains production-specific environment variables

# API Configuration
VITE_API_URL=https://api.techverse.com/api

# App Configuration
VITE_APP_NAME=TechVerse
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT_SUPPORT=false
VITE_ENABLE_REVIEWS=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGGING=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_MOCK_API=false

# External Services (Production Keys - Set via CI/CD)
VITE_STRIPE_PUBLISHABLE_KEY=${VITE_STRIPE_PUBLISHABLE_KEY}
VITE_GOOGLE_ANALYTICS_ID=${VITE_GOOGLE_ANALYTICS_ID}
VITE_FACEBOOK_PIXEL_ID=${VITE_FACEBOOK_PIXEL_ID}

# Request Configuration
VITE_REQUEST_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=2
VITE_RETRY_DELAY=2000
VITE_CACHE_TTL=1800000

# Security
VITE_CORS_ENABLED=true
VITE_SECURITY_LEVEL=high

# Build Configuration
VITE_BUILD_HASH=${BUILD_HASH:-production-build}