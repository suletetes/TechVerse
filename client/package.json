{
  "name": "client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "test:integration": "vitest run src/components/__tests__/integration/",
    "test:performance": "vitest run --reporter=verbose --testTimeout=30000",
    "test:unit": "vitest run src/components/__tests__/ --exclude=**/integration/**",
    "test:hooks": "vitest run src/hooks/__tests__/",
    "test:context": "vitest run src/context/__tests__/",
    "test:components": "vitest run src/components/__tests__/ --exclude=**/integration/**",
    "test:auth": "vitest run src/components/__tests__/Auth/",
    "test:common": "vitest run src/components/__tests__/Common/",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=test-results.xml"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.0.0",
    "jsdom": "^25.0.0",
    "vite": "^7.1.2",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "@tanstack/react-query": "^5.0.0",
    "lucide-react": "^0.400.0"
  }
}
