# Development Environment Configuration

NODE_ENV=development

# API Configuration
PORT=5000
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/techverse_dev

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-dev-jwt-secret-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-dev-refresh-secret-change-in-production
JWT_REFRESH_EXPIRE=30d
JWT_ISSUER=techverse-api
JWT_AUDIENCE=techverse-client

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (Development - use Mailtrap or similar)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your_mailtrap_user
EMAIL_PASS=your_mailtrap_pass
EMAIL_FROM=noreply@techverse.dev

# Cloudinary (Optional)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Logging
LOG_LEVEL=debug

# Security
ENABLE_RATE_LIMITING=false
ENABLE_CSRF=false
