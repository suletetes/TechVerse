{
  "name": "techverse-ecommerce",
  "version": "1.0.0",
  "description": "MERN Stack E-commerce Platform",
  "type": "module",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --prefix server",
    "dev:client": "npm run dev --prefix client",
    "start:server": "npm start --prefix server",
    "build": "npm run build --prefix client",
    "build:client": "npm run build --prefix client",
    "install:all": "npm install && npm install --prefix client && npm install --prefix server",
    "seed": "npm run seed --prefix server",
    "seed:dev": "npm run seed:dev --prefix server",
    "test": "npm test --prefix client && npm test --prefix server",
    "test:client": "npm test --prefix client",
    "test:server": "npm test --prefix server",
    "lint": "npm run lint --prefix client && npm run lint --prefix server",
    "lint:fix": "npm run lint:fix --prefix client && npm run lint:fix --prefix server"
  },
  "keywords": [
    "ecommerce",
    "mern",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Suleiman Abdulkadir",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@sentry/profiling-node": "^10.21.0",
    "node-fetch": "^3.3.2"
  }
}
