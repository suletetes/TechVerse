# Production Environment Configuration

NODE_ENV=production

# API Configuration
PORT=5000
API_URL=https://api.techverse.com
CLIENT_URL=https://techverse.com

# Database (Use GitHub Secrets)
MONGODB_URI=${PROD_MONGODB_URI}

# Redis
REDIS_URL=${PROD_REDIS_URL}

# JWT Configuration (Use GitHub Secrets)
JWT_SECRET=${PROD_JWT_SECRET}
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=${PROD_JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRE=30d
JWT_ISSUER=techverse-api
JWT_AUDIENCE=techverse-client

# Stripe (Use GitHub Secrets)
STRIPE_SECRET_KEY=${PROD_STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${PROD_STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${PROD_STRIPE_WEBHOOK_SECRET}

# Email
EMAIL_HOST=${PROD_EMAIL_HOST}
EMAIL_PORT=587
EMAIL_USER=${PROD_EMAIL_USER}
EMAIL_PASS=${PROD_EMAIL_PASS}
EMAIL_FROM=noreply@techverse.com

# Cloudinary
CLOUDINARY_CLOUD_NAME=${PROD_CLOUDINARY_CLOUD_NAME}
CLOUDINARY_API_KEY=${PROD_CLOUDINARY_API_KEY}
CLOUDINARY_API_SECRET=${PROD_CLOUDINARY_API_SECRET}

# Logging
LOG_LEVEL=warn

# Security
ENABLE_RATE_LIMITING=true
ENABLE_CSRF=true

# Sentry
SENTRY_DSN=${PROD_SENTRY_DSN}

# Performance
ENABLE_REDIS_CACHE=true
