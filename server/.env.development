# Development Environment Configuration
# This file contains development-specific environment variables

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/techverse-dev

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-development-only-min-32-chars
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here-development-only-min-32-chars
JWT_REFRESH_EXPIRE=30d

# Security
BCRYPT_ROUNDS=10

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:4173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (Development)
EMAIL_FROM=noreply@techverse.dev
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-dev-email@gmail.com
EMAIL_PASS=your-dev-app-password

# External Services (Development Keys)
CLOUDINARY_CLOUD_NAME=your-dev-cloud-name
CLOUDINARY_API_KEY=your-dev-api-key
CLOUDINARY_API_SECRET=your-dev-api-secret

STRIPE_PUBLISHABLE_KEY=pk_test_your-dev-publishable-key
STRIPE_SECRET_KEY=sk_test_your-dev-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-dev-webhook-secret

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_CORS=true
ENABLE_RATE_LIMITING=false
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Logging
LOG_LEVEL=debug

# Admin Configuration
ADMIN_EMAIL=admin@techverse.dev
ADMIN_PASSWORD=admin123456

# Maintenance
MAINTENANCE_MODE=false