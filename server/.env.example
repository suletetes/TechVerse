# Database Configuration
MONGODB_URI=mongodb://localhost:27017/techverse
DB_NAME=techverse

# Server Configuration
PORT=5000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CLIENT_URL=http://localhost:3000

# Optional Redis Configuration (for caching and sessions)
# If not provided, will use in-memory alternatives
REDIS_URL=redis://localhost:6379
# OR individual Redis settings:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Optional AWS/CDN Configuration
# If not provided, will use local file storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Optional CloudFront Configuration
AWS_CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id
CDN_DOMAIN=your-cdn-domain.com

# Local Storage Configuration (fallback)
LOCAL_STORAGE_PATH=./uploads

# Email Configuration (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=TechVerse <noreply@techverse.com>

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Performance Configuration
ENABLE_QUERY_LOGGING=true
SLOW_QUERY_THRESHOLD=1000
CACHE_DEFAULT_TTL=300

# Monitoring Configuration (optional)
SENTRY_DSN=your-sentry-dsn
AUDIT_WEBHOOK_URL=your-audit-webhook-url
AUDIT_WEBHOOK_TOKEN=your-webhook-token
SLACK_WEBHOOK_URL=your-slack-webhook-url
ADMIN_ALERT_EMAIL=admin@techverse.com

# Development Configuration
DEBUG=techverse:*
LOG_LEVEL=debug

# Production Configuration (override in production)
# NODE_ENV=production
# LOG_LEVEL=info
# ENABLE_QUERY_LOGGING=false