# Database Configuration
MONGODB_URI=mongodb://localhost:27017/techverse
MONGODB_TEST_URI=mongodb://localhost:27017/techverse_test

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=true

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@techverse.com
SUPPORT_EMAIL=support@techverse.com
ADMIN_EMAILS=admin@techverse.com,manager@techverse.com

# Security Configuration
DISABLE_RATE_LIMITING=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Admin Configuration
ADMIN_ALERT_EMAIL=admin@techverse.com

# Social Authentication (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Payment Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Sentry Configuration (Optional)
SENTRY_DSN=your-sentry-dsn-here

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name