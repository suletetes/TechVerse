{
  "name": "techverse-server",
  "version": "1.0.0",
  "description": "Backend API for TechVerse E-commerce",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "npm run validate-build && node src/scripts/validateConfig.js && node server.js",
    "start:production": "NODE_ENV=production npm start",
    "start:no-validate": "node server.js",
    "dev": "nodemon server.js",
    "validate-config": "node src/scripts/validateConfig.js",
    "validate-build": "node ../scripts/validate-build-config.js",
    "detect-drift": "node ../scripts/detect-config-drift.js",
    "seed": "node src/scripts/seed.js",
    "seed:dev": "NODE_ENV=development node src/scripts/seed.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run src/__tests__/ --exclude=**/integration/** --exclude=**/performance/**",
    "test:integration": "vitest run src/__tests__/integration/",
    "test:performance": "vitest run src/__tests__/performance/ --testTimeout=60000",
    "test:load": "vitest run src/__tests__/performance/load.test.js --testTimeout=120000",
    "test:models": "vitest run src/__tests__/models/",
    "test:controllers": "vitest run src/__tests__/controllers/",
    "test:middleware": "vitest run src/__tests__/middleware/",
    "test:services": "vitest run src/__tests__/services/",
    "test:auth": "node src/scripts/testAuthentication.js",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=test-results.xml",
    "test:sections": "node src/scripts/testSectionManagement.js",
    "migrate:sections": "node src/scripts/updateProductSections.js",
    "verify:seed": "node src/scripts/verifySeedData.js",
    "test:upload": "node src/scripts/testFileUpload.js",
    "verify:health": "node scripts/verify-health-checks.js",
    "migrate:passwords": "node src/scripts/migratePasswordHashes.js",
    "migrate:passwords:add-flags": "node src/scripts/migratePasswordHashes.js --add-flags",
    "migrate:passwords:remove-flags": "node src/scripts/migratePasswordHashes.js --remove-flags"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "@sentry/node": "^10.21.0",
    "@sentry/tracing": "^7.120.4",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sharp": "^0.33.0",
    "speakeasy": "^2.0.0",
    "stripe": "^14.7.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.0.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "vitest": "^2.0.0"
  }
}
