{
  "name": "techverse-server",
  "version": "1.0.0",
  "description": "Backend API for TechVerse E-commerce",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node src/scripts/seed.js",
    "seed:dev": "NODE_ENV=development node src/scripts/seed.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run src/__tests__/ --exclude=**/integration/** --exclude=**/performance/**",
    "test:integration": "vitest run src/__tests__/integration/",
    "test:performance": "vitest run src/__tests__/performance/ --testTimeout=60000",
    "test:load": "vitest run src/__tests__/performance/load.test.js --testTimeout=120000",
    "test:models": "vitest run src/__tests__/models/",
    "test:controllers": "vitest run src/__tests__/controllers/",
    "test:middleware": "vitest run src/__tests__/middleware/",
    "test:services": "vitest run src/__tests__/services/",
    "test:auth": "vitest run src/__tests__/controllers/authController.test.js",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=test-results.xml",
    "test:sections": "node src/scripts/testSectionManagement.js",
    "migrate:sections": "node src/scripts/updateProductSections.js",
    "verify:seed": "node src/scripts/verifySeedData.js",
    "test:upload": "node src/scripts/testFileUpload.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "nodemailer": "^6.9.7",
    "stripe": "^14.7.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "sharp": "^0.33.0",
    "ioredis": "^5.3.2",
    "crypto": "^1.0.1",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.0.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3"
  }
}