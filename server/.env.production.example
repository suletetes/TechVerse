# TechVerse Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Application Configuration
NODE_ENV=production
PORT=5000
APP_NAME=TechVerse
APP_URL=https://api.techverse.com
CLIENT_URL=https://techverse.com

# Database Configuration
MONGODB_URI=mongodb://username:password@mongo1.techverse.com:27017,mongo2.techverse.com:27017,mongo3.techverse.com:27017/techverse?replicaSet=rs0&authSource=admin
MONGODB_TEST_URI=mongodb://localhost:27017/techverse_test

# Redis Configuration
REDIS_URL=redis://username:password@redis.techverse.com:6379
REDIS_CLUSTER_NODES=redis1.techverse.com:6379,redis2.techverse.com:6379,redis3.techverse.com:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars-change-this
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-min-32-chars-change-this
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-key-min-32-chars-change-this
SESSION_NAME=techverse_session
SESSION_DOMAIN=.techverse.com
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=postmaster@mg.techverse.com
SMTP_PASS=your-mailgun-password
FROM_EMAIL=noreply@techverse.com
FROM_NAME=TechVerse

# File Upload Configuration
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=techverse-uploads

# Cloudinary Configuration (Alternative)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Payment Processing
# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=live

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# CORS Configuration
CORS_ORIGIN=https://techverse.com,https://admin.techverse.com
CORS_CREDENTIALS=true

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/techverse.crt
SSL_KEY_PATH=/etc/ssl/private/techverse.key

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
DATABASE_TIMEOUT=5000
REDIS_TIMEOUT=3000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Search Configuration
ELASTICSEARCH_URL=https://elasticsearch.techverse.com:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Third-party Services
# Twilio (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Alternative email service)
SENDGRID_API_KEY=your-sendgrid-api-key

# Slack (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_CACHING=true

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
COMPRESSION_LEVEL=6

# Database Pool Configuration
DB_POOL_SIZE=10
DB_BUFFER_MAX_ENTRIES=0

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# API Rate Limiting
API_RATE_LIMIT_POINTS=100
API_RATE_LIMIT_DURATION=900

# Session Configuration
SESSION_MAX_AGE=86400000
SESSION_ROLLING=true

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=techverse-backups

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please check back soon.

# Development/Debug (should be false in production)
DEBUG=false
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false